# TheGunFirm.com Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Development: Use your server database for full RSR API access
# Production: Automatically handles SSL and connection pooling
# Example: postgresql://username:password@hostname:5432/database_name
DATABASE_URL="postgresql://gunfirm_user:your_password@your-server-ip:5432/thegunfirm"

# Alternative: Neon serverless (fallback option)
# DATABASE_URL="postgresql://username:password@ep-hostname.neon.tech/dbname?sslmode=require"

# ============================================================================
# RSR DISTRIBUTOR API - Required for live product catalog
# ============================================================================

# Primary RSR Credentials (required)
RSR_USERNAME="your_rsr_username"
RSR_PASSWORD="your_rsr_password"
RSR_POS="I"

# Standard RSR Credentials (backup authentication)
RSR_STANDARD_USERNAME="your_standard_username"
RSR_STANDARD_PASSWORD="your_standard_password"

# ============================================================================
# ALGOLIA SEARCH SERVICE - Product search and indexing
# ============================================================================

# Algolia Application Credentials
ALGOLIA_APP_ID="your_algolia_app_id"
ALGOLIA_API_KEY="your_search_only_api_key"
ALGOLIA_ADMIN_API_KEY="your_admin_api_key"

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Environment (auto-detected in most cases)
NODE_ENV="development"

# Production URL (for Replit Deployments)
REPLIT_DB_URL=""

# ============================================================================
# OPTIONAL: PAYMENT PROCESSING
# ============================================================================

# Authorize.Net Credentials (if payment processing needed)
# AUTHORIZE_NET_API_LOGIN_ID="your_api_login_id"
# AUTHORIZE_NET_TRANSACTION_KEY="your_transaction_key"
# AUTHORIZE_NET_ENVIRONMENT="sandbox"  # or "production"

# ============================================================================
# OPTIONAL: ADDITIONAL SERVICES
# ============================================================================

# Session Secret (auto-generated if not provided)
# SESSION_SECRET="your_secure_session_secret"

# File Upload Limits
# MAX_FILE_SIZE="10mb"

# API Rate Limiting
# RATE_LIMIT_REQUESTS="1000"
# RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds